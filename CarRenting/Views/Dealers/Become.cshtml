@model BecomeDealerFormModel

@{
    ViewData["Title"] = "Become Dealer";
}

<div class="container">
    <div class="row">
        <div class="offset-md-2 col-md-8 col-sm-12 col-xl-6">
            <h2 class="heading-margin text-center">Become Dealer</h2>

            <form method="post">
                <div class="mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" placeholder="Place your name here">
                    <span asp-validation-for="Name" class="small text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="PhoneNumber" class="form-label"></label>
                    <input asp-for="PhoneNumber" class="form-control" placeholder="Place your phone number here">
                    <span asp-validation-for="PhoneNumber" class="small text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary mt-3">Submit</button>
                @*<input class="btn btn-primary" type="submit" value="Save"/>*@
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}